{
  "name": "api-server-template",
  "version": "1.0.0",
  "description": "Template project for node.js HTTP apis",
  "main": "src/server.js",
  "scripts": {
    "start": "NODE_ENV=development nodemon -w src -w config src/server.js",
    "start:prod": "NODE_ENV=production node .",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "test": "run-s test:unit test:e2e",
    "test:unit": "NODE_ENV=test nyc mocha --opts ./mocha/mocha.opts ./src/**/*.spec.js",
    "test:e2e": "NODE_ENV=test mocha --opts ./mocha/mocha.opts ./e2e/app.spec.js"
  },
  "files": [
    "src/**/**",
    "config/**/**",
    "package.json"
  ],
  "keywords": [
    "api",
    "template",
    "http",
    "cd-ready"
  ],
  "author": "Rahul Ballal",
  "license": "ISC",
  "devDependencies": {
    "chai": "4.1.2",
    "dirty-chai": "2.0.1",
    "eslint": "4.7.2",
    "eslint-config-airbnb-base": "12.0.0",
    "eslint-plugin-import": "2.7.0",
    "mocha": "3.5.3",
    "nodemon": "1.12.1",
    "npm-run-all": "4.1.1",
    "nyc": "11.2.1",
    "proxyquire": "1.8.0",
    "sinon": "3.3.0",
    "supertest": "3.0.0"
  },
  "dependencies": {
    "compression": "1.7.0",
    "config": "1.26.2",
    "express-pino-logger": "2.0.0",
    "fastify": "0.28.2",
    "fastify-helmet": "1.0.1",
    "pino": "4.7.2"
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "node": true,
      "mocha": true
    },
    "globals": {
      "sinon": true
    }
  },
  "nyc": {
    "exclude": [
      "**/*/*.spec.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "watermarks": {
      "lines": [
        80,
        95
      ],
      "functions": [
        80,
        95
      ],
      "branches": [
        80,
        95
      ],
      "statements": [
        80,
        95
      ]
    }
  }
}
